# Runtime
APP_ENV=staging
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# AWS Secrets Manager (preferred)
AWS_REGION=ap-south-1
AWS_SECRETS_MANAGER_ENABLED=true
AWS_SECRETS_MANAGER_PREFIX=asharvi/backend
AWS_SECRETS_MANAGER_SECRET_ID=asharvi/backend/staging
AWS_SECRETS_MANAGER_REQUIRED=true

# JWT (fallbacks if Secrets Manager is unavailable)
JWT_SECRET=replace-with-staging-secret
JWT_REFRESH_SECRET=replace-with-staging-refresh-secret

# SMTP (fallbacks if Secrets Manager is unavailable)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=staging-smtp-username
SMTP_PASSWORD=staging-smtp-password
SMTP_FROM_EMAIL=no-reply@staging.example.com

# Twilio (fallbacks if Secrets Manager is unavailable)
TWILIO_ACCOUNT_SID=staging-twilio-sid
TWILIO_AUTH_TOKEN=staging-twilio-auth-token
TWILIO_FROM_NUMBER=+911234567890

# CORS
CORS_ORIGIN=https://staging.example.com
