{
  "name": "nodejs-server-layered",
  "version": "1.0.0",
  "description": "A comprehensive Node.js server with layered architecture following best practices",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "health-check": "curl http://localhost:3000/health-check",
    "db:init": "node scripts/initMongoDB.js",
    "db:drop": "node scripts/dropMongoDB.js"
  },
  "keywords": [
    "nodejs",
    "express",
    "server",
    "api",
    "rest",
    "layered-architecture",
    "services"
