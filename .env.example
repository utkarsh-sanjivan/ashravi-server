# Application
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# MongoDB
MONGO_URI=mongodb://localhost:27017/ashravi-dev
DATABASE_URL=mongodb://localhost:27017/ashravi-dev
DB_NAME=ashravi-dev

# JWT
JWT_SECRET=replace-with-strong-secret
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=replace-with-refresh-secret

# SMTP / Email
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-smtp-username
SMTP_PASSWORD=your-smtp-password
SMTP_FROM_EMAIL=no-reply@example.com

# Twilio / SMS
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_FROM_NUMBER=+911234567890

# CORS
CORS_ORIGIN=http://localhost:3000,http://192.168.1.12:3000

# Logging
LOG_LEVEL=debug

# AWS / DynamoDB
AWS_ACCESS_KEY_ID=localAccessKey
AWS_SECRET_ACCESS_KEY=localSecretKey
DYNAMODB_LOCAL=true
DYNAMODB_ENDPOINT=http://localhost:8000
DYNAMODB_REGION=local

# DynamoDB table names
DYNAMODB_PARENT_TABLE=Parents
DYNAMODB_CHILD_TABLE=Children
DYNAMODB_CHILD_EDUCATION_TABLE=ChildEducation
DYNAMODB_CHILD_NUTRITION_TABLE=ChildNutrition
DYNAMODB_INSTRUCTOR_TABLE=Instructors
DYNAMODB_COURSE_TABLE=Courses
DYNAMODB_COURSE_PROGRESS_TABLE=CourseProgress
DYNAMODB_QUESTION_TABLE=Questions
DYNAMODB_OTP_TABLE=Otps

# AWS Secrets Manager (optional; used in staging/production)
APP_ENV=development
AWS_REGION=us-east-1
AWS_SECRETS_MANAGER_ENABLED=false
AWS_SECRETS_MANAGER_PREFIX=asharvi/backend
AWS_SECRETS_MANAGER_SECRET_ID=
AWS_SECRETS_MANAGER_REQUIRED=false
